-module(list_test).

%% ====================================================================
%% API functions
%% ====================================================================
-compile(export_all).



%% ====================================================================
%% Internal functions
%% ====================================================================

%% list的合并
merge(L,Data,1)->
	[Data|L].
merge(L,Data,N)->
	[Data|merge(L,Data,N-1)].

%% lists的分裂
separate([K|T])->
	K.

%% 测试大数据性能

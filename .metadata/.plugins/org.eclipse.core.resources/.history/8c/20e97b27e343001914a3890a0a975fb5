-module(server1).

%% ====================================================================
%% API functions
%% ====================================================================
-export([start/0]).



%% ====================================================================
%% Internal functions
%% ====================================================================

start()->
   {ok,Listen}=gen_tcp:listen(6000, [binary,{packet,4},{reuseaddr,true},{active,true}]),
   loop_listen(Listen).

loop_listen(Listen)->
	{ok,Socket}=gen_tcp:accept(Listen),
	loop_talk(Socket),
    loop_listen(Listen).

loop_talk(Socket)->
	look_talk(Socket).
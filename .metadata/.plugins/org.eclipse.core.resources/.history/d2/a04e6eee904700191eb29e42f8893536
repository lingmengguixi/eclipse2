%% @author Administrator
%% @doc @todo Add description to fun_text.


-module(fun_text).

%% ====================================================================
%% API functions
%% ====================================================================
-compile(export_all).



%% ====================================================================
%% Internal functions
%% ====================================================================

fun1([],T)->
   T;
fun1([X1|L],T)->
   fun1(L,[X1*2|T]).

fun2([])->
	[];
fun2([X1|L])->
	[X1*2|fun2(L)].

t(N)->
   io:format("~p~n",[fun1([1,2,3,4],[])]),
   io:format("~p~n",[fun2([1,2,3,4])]),
   L=lists:seq(1, N),
   F1=fun(_X)->fun1(L,[]) end,
   F2=fun(_X)->fun2(L) end,
   ptester:run(1, [
           {"fun1:",F1}
		  ,{"fun2:",F2}
        ]
    ).
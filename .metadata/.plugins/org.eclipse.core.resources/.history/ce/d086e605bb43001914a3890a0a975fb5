-module(homework).

%% ====================================================================
%% API functions
%% ====================================================================
-export([main1/0]).



%% ====================================================================
%% Internal functions
%% ====================================================================
odd_list1([X|T])->
	if 
		X rem 2=:=1->[X|odd_list1(T)];
		true ->odd_list1(T)
	end;
odd_list1([])->
	[].

main1()->
   L = [1, 2, 3, 4, 5, 6, 7, 8, 9],
   odd_list1(L).
